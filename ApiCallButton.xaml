<UserControl x:Class="ApptReminderWindowsClient.ApiCallButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Click="Button_Click" Padding="{Binding ButtonPadding}" Margin="{Binding ButtonMargin}" IsVisibleChanged="Button_Visibility_Listener">
        <StackPanel Orientation="Horizontal">
            <fa:ImageAwesome Visibility="Collapsed" Height="{Binding ElementName=ButtonText, Path=FontSize}" Icon="Spinner" Spin="True" SpinDuration="5" Margin="0 0 5 0" />
            <fa:ImageAwesome Visibility="Collapsed" Height="{Binding ElementName=ButtonText, Path=FontSize}" Icon="Check" Foreground="Green" Margin="0 0 5 0" />
            <fa:ImageAwesome Visibility="Collapsed" Height="{Binding ElementName=ButtonText, Path=FontSize}" Icon="Times" Foreground="Red" Margin="0 0 5 0" />
            <TextBlock Name="ButtonText" Text="{Binding Text}" />
        </StackPanel>
    </Button>
</UserControl>
